@model IEnumerable<DAL.Modelo.TdcTchEstadoPedido>

@{
    ViewData["Title"] = "Index";
}

<!-- Página principal para ver el estado del pedido -->

<h1>Index</h1>

<p>
    <a asp-action="Create">Añadir</a>
</p>

<!-- Método para mostrar el filtrado por la vista-->

<form asp-controller="TdcTchEstadoPedidoes" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-primary"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MdDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEstadoEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEstadoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEstadoDevolucion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodLinea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MdDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodEstadoEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodEstadoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodEstadoDevolucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodLinea)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
