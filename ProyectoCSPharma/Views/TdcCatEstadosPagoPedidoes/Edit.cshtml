@model DAL.Modelo.TdcCatEstadosPagoPedido

@{
    ViewData["Title"] = "Edit";
}
<!-- Página que edita los campos del estado de pago del pedido -->

<h1>Editar</h1>

<h4>Estado del pago del pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MdDate" class="control-label"></label>
                <input asp-for="MdDate" class="form-control" />
                <span asp-validation-for="MdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodEstadoPago" class="control-label"></label>
                <input asp-for="CodEstadoPago" class="form-control" />
                <span asp-validation-for="CodEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesEstadoPago" class="control-label"></label>
                <input asp-for="DesEstadoPago" class="form-control" />
                <span asp-validation-for="DesEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}