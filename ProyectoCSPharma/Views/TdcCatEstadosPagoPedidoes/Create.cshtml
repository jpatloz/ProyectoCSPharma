@model DAL.Modelo.TdcCatEstadosPagoPedido

@{
    ViewData["Title"] = "Create";
}

<!-- Página para crear un elemento -->

<h1>Crear</h1>

<h4>Estado de pago del pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MdUuid" class="control-label"></label>
                <input asp-for="MdUuid" class="form-control" />
                <span asp-validation-for="MdUuid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MdDate" class="control-label"></label>
                <input asp-for="MdDate" class="form-control" />
                <span asp-validation-for="MdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodEstadoPago" class="control-label"></label>
                <input asp-for="CodEstadoPago" class="form-control" />
                <span asp-validation-for="CodEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesEstadoPago" class="control-label"></label>
                <input asp-for="DesEstadoPago" class="form-control" />
                <span asp-validation-for="DesEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
