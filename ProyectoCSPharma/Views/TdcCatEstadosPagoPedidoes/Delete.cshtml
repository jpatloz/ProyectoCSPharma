@model DAL.Modelo.TdcCatEstadosPagoPedido

@{
    ViewData["Title"] = "Delete";
}

<!-- Página para eliminar los campos del estado de pago del pedido -->

<h3>¿Seguro que quieres eliminarlo?</h3>

<div>
    <h4>Estado del pago del pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MdDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MdDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodEstadoPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodEstadoPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DesEstadoPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DesEstadoPago)
